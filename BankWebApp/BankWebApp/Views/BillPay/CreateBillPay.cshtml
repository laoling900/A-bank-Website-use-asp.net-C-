@model BillPayOps
@{
    ViewData["Title"] = "Create Bill pay";
}

<div>
    <h1 class="display-4">Welcome, @ViewBag.accountNumber</h1>

    <h3>Create Bill pay</h3>

    <form asp-action="CreateBillPay">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="DataList">
            <label asp-for="payeeName" class="control-label"> </label>
            <select asp-for="payeeName" asp-items="Model.PayeeNames">
                <option value="">Choose a payee</option>
            </select>
            @Html.ValidationMessage("payeeName", new { @class = "text-danger" })

        </div>
        <br />
        <div class="form-group">
            <label asp-for="billPay.Amount" class="control-label">Amount: </label>
            <input asp-for="billPay.Amount" class="form-control"
                   data-val="true" data-val-number="The field Amount must be a number."
                   data-val-required="The Amount field is required." />
            @Html.ValidationMessage("billPay.Amount", new { @class = "text-danger" })
            <br />
        </div>
        <div class="form-group">
            <label asp-for="billPay.ScheduleTimeUtc" class="control-label"></label>
            <input asp-for="billPay.ScheduleTimeUtc" class="form-control" />
            @Html.ValidationMessage("billPay.ScheduleTimeUtc", new { @class = "text-danger" })
            <br />
            <div class="DataList2">
                <label asp-for="period" class="control-label"> </label>
                <select asp-for="period" asp-items="Model.PeriodList">
                    <option value="">Choose Once/Monthly</option>
                </select>
                @Html.ValidationMessage("period", new { @class = "text-danger" })
            </div>
            <br /><br />

            <div class="form-group">
                <input type="submit" value="CreateBillPay" class="btn btn-primary" />
            </div>
        </div>

    </form>

</div>


<div>
    <a asp-action="Index">Back to Bill pays</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
 }
}
